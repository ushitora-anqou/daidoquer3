{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "outDir": "dist",
    "removeComments": true,
    "target": "ES2020",
    "module": "CommonJS",

    "baseUrl": "./",
    "esModuleInterop": true,
    "sourceMap": true,
    "sourceRoot": "src",

    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [
    "**/*.ts"
  ]
}
